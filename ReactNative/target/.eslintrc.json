{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },"extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  // Usa o parser do TypeScript
  "parser": "@typescript-eslint/parser", 
  "plugins": [
    "react",
    "react-native",
    "@typescript-eslint" // Adiciona o plugin do TypeScript
  ],
  "settings": {
    "react": {
      "version": "detect" // Detecta automaticamente a versão do React
    }
  },
  "rules": {
    // Adicione ou sobrescreva regras aqui
    "react-native/no-unused-styles": 2, // Exemplo: Alerta para estilos não usados
    "react/jsx-uses-react": "off",     // Desliga regras que conflitam com o React 17+ (Nova JSX Transform)
    "react/react-in-jsx-scope": "off"  // Desliga regras que conflitam com o React 17+
  }
}